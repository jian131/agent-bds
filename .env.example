# ===========================================
# BDS Agent - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Application
APP_NAME=BDS Agent
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/bds_agent
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/bds_agent

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# LLM Configuration (Choose one: groq or ollama)
# ===========================================
# Mode: groq (fast, free API) or ollama (local)
LLM_MODE=groq

# Groq API (Recommended - Fast & Free)
# Get your API key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Ollama Fallback (Local, requires Ollama installed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:14b

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=bds_listings

# Google Sheets
# Download credentials.json from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GOOGLE_SHEETS_CREDENTIALS_FILE=./credentials/google_sheets_credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_WORKSHEET_NAME=Listings

# Telegram Bot
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_chat_id_here

# Scraping Configuration
SCRAPE_DELAY_MIN=2
SCRAPE_DELAY_MAX=5
SCRAPE_MAX_PAGES=10

# Browser Settings
HEADLESS_MODE=true
BROWSER_USE_VISION=false

# Validation
PRICE_MIN_PER_M2=20000000
PRICE_MAX_PER_M2=300000000
DEFAULT_CITY=Hà Nội

# Scheduler
SCHEDULER_ENABLED=true
AUTO_SCRAPE_INTERVAL_HOURS=4
CLEANUP_DAYS_THRESHOLD=30

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend
FRONTEND_URL=http://localhost:3000
